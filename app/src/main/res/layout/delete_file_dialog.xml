<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/picture_delete_dialog_shape"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="删除分类文件"
                android:gravity="center"
                android:textColor="#ff0000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/picture_delete_dialog_tipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="是否要删除此分类文件"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="#0f0f0f"
                android:gravity="center"
                />


            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >


                <TextView
                    android:id="@+id/picture_delete_dialog_affirm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="确认"
                    android:textColor="#ff0000"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="#f0f0f0"
                    />

                <TextView
                    android:id="@+id/picture_delete_dialog_cancle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="取消"
                    android:textColor="#0f0f0f"
                    />

            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>

</LinearLayout>