<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/picture_preview_dialog_image"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />

        <TextView
            android:id="@+id/picture_category_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#5f5f5f"
            android:text="添加图片至文件"
            android:layout_below="@id/picture_preview_dialog_image"
            android:layout_centerHorizontal="true"
            android:background="@drawable/classify_detail_act_text_shape"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15sp"
            />

    </RelativeLayout>


</LinearLayout>